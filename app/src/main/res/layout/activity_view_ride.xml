<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.github.viv2d2.findride.ViewRideActivity">

    <!-- FROM -->
    <TextView
        android:text="@string/from"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/from_title"
        android:background="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="start|center_vertical"
        android:paddingLeft="30dp"
        android:textAlignment="viewStart" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/from_input"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/from_title"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart" />

    <!-- TO -->
    <TextView
        android:text="@string/to"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/to_title"
        android:background="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="start|center_vertical"
        android:paddingLeft="30dp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/from_title" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/to_input"
        android:background="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:layout_below="@+id/from_input"
        android:layout_toRightOf="@+id/to_title"/>

    <!-- DATE -->

    <TextView
        android:text="@string/date"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/date_title"
        android:background="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:paddingLeft="30dp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/to_title"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/date_input"
        android:background="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:layout_below="@id/to_input"
        android:layout_toRightOf="@+id/date_title"
        android:layout_marginTop="35dp" />

    <!-- TIME -->
    <TextView
        android:text="@string/time"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/time_title"
        android:background="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="start|center_vertical"
        android:paddingLeft="30dp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/date_title" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/time_input"
        android:background="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:layout_below="@+id/date_input"
        android:layout_toRightOf="@+id/time_title"/>


    <!-- RIDERS -->
    <TextView
        android:text="@string/riders"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/riders_title"
        android:background="@color/colorAccent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="start|center_vertical"
        android:paddingLeft="30dp"
        android:textAlignment="viewStart"
        android:layout_below="@+id/time_title"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:id="@+id/riders_input"
        android:background="@color/colorAccent"
        android:gravity="center|center_vertical"
        android:textAlignment="center"
        android:layout_below="@+id/time_input"
        android:layout_toRightOf="@+id/riders_title"
        android:layout_alignRight="@+id/time_input"
        android:layout_alignEnd="@+id/time_input" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/riders_info"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingLeft="30dp"
        android:layout_below="@+id/riders_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- NOTES -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/notes_title"
        android:background="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:text="@string/notes"
        android:paddingLeft="30dp"
        android:layout_below="@id/riders_info"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/notes_input"
        android:gravity="start|center_vertical"
        android:textAlignment="viewStart"
        android:paddingLeft="30dp"
        android:layout_below="@+id/notes_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- CALL ACTION METHOD -->
    <!-- action = 0 (create), 1 (join), 2 (leave) -->
    <Button
        android:id="@+id/find_ride_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="action"/>


</RelativeLayout>
