<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_ride"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.github.viv2d2.findride.ViewRideActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FROM -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:text="@string/from"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:paddingLeft="30dp"
                android:id="@+id/from_title"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:id="@+id/from_input"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- TO -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:text="@string/to"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/to_title"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:paddingLeft="30dp"
                android:textAlignment="viewStart"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:id="@+id/to_input"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- DATE -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:text="@string/date"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/date_title"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:paddingLeft="30dp"
                android:textAlignment="viewStart"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:id="@+id/date_input"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- TIME -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:text="@string/time"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/time_title"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:paddingLeft="30dp"
                android:textAlignment="viewStart"/>

            <TextView
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:id="@+id/time_input"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- RIDERS -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:text="@string/riders"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/riders_title"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:paddingLeft="30dp"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/riders_input"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:layout_weight="1"
                android:textAlignment="viewStart" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start|center_vertical"
            android:textAlignment="viewStart"
            android:paddingLeft="30dp"
            android:id="@+id/rider_last"
            android:paddingTop="19dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/blue"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:id="@+id/riders_info"
                    android:gravity="start|center_vertical"
                    android:textAlignment="viewStart"
                    android:text="Sarah                 24 mutual"
                    android:paddingLeft="30dp"
                    android:layout_below="@+id/riders_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/fuscia"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:gravity="start|center_vertical"
                    android:textAlignment="viewStart"
                    android:paddingLeft="30dp"
                    android:text="Vivian                 73 mutual"
                    android:layout_below="@+id/riders_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- NOTES -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/notes_title"
                android:background="@color/colorAccent"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:text="@string/notes"
                android:layout_weight="1"
                android:paddingLeft="30dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/notes_input"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:paddingLeft="30dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- CALL ACTION METHOD -->
    <!-- action = 0 (create), 1 (join), 2 (leave) -->
    <Button
        android:id="@+id/action_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="action"/>


</RelativeLayout>
